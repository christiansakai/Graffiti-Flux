{
  "name": "Graffiti",
  "version": "0.0.1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Paint the web red.",
  "homepage_url": "http://graffiti.herokuapp.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "bg/background.html",
    "persistent": true
  },
  "externally_connectable": {
    "matches": ["http://localhost:9000/"]
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "notifications",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "css": [
      "css/reset.css",
      "css/bootstrap.css",
      "css/material.css",
      "css/main.css"
    ]
  }, {
    "matches": [
      "*://*/*"
    ],
    "js": [
      "js/main.js"
    ]
  }]
}
